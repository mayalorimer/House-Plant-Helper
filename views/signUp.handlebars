<div class="sign-up-form">
  <div class="row-signup">
    <div class="su-form">
      <h2>SIGN UP</h2>
      <form class="form signup-form">
        <div class="form-group">
          <br/>
          <label for="email-signup">EMAIL:</label>
          <br/>
          <input class="form-input" type="text" id="email-signup"></input>
        </div>
        <div class="form-group">
          <label for="name-signup">NAME:</label>
          <br/>
          <input class="form-input" type="text" id="name-signup"></input>
        </div>
        <div class="form-group">
          <label for="password-signup">PASSWORD:</label>
          <br/>
          <input class="form-input" type="password" id="password-signup"></input>
        </div>
        <div class="signup-page-button">
          <button class="signbtn" id="modalBtnSU" type="submit">SIGNUP</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- Trigger/Open The Modal -->

<!-- The Modal -->

<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <p>THANKS FOR SIGNING UP!</p>
  </div>
</div>
