<!-- Loop over each object in the projects array -->
<h3 class="recents">ALL POSTS</h3>
<script src="./js/login.js"></script>
{{#each posts as |post|}}
<div class="recent-posts">
  <div class="homepage-posts">
    <h2 class="qs-and-as">SUBJECT:</h2>
    <p class="title">{{post.title}}</p>
    <img src="{{post.image}}">
    <h2 class="qs-and-as">QUESTION:</h2>
    <p class="homepage-posts-descriptions">{{post.description}}</p>
    <p class="homepage-posts-users"><i>CREATED BY: </i> {{post.user.username}}</p>
    <h4>ADVICE:</h4>
    {{#each post.advice}}
    <p>{{advice}}</p>
    {{/each}}
    {{log post}}

  </div>
</div>

{{/each}}

<script src="./js/post.js"></script>
<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="/js/widget.js"></script>