<!-- Loop over each object in the projects array -->
{{#if logged_in}}
{{else}}
<div class="row">
  <div class="col-md-6">
    <h2>LOGIN</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">EMAIL:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">PASSWORD:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">LOGIN</button>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit"><a href="/signUp">SIGN UP</a></button>
      </div>
    </form>
  </div>
</div>

<h3 class="recents">RECENT POSTS</h3>
{{/if}}

<script src="./js/login.js"></script>

{{#each posts as |post|}}
<div class="homepage-posts">
  <h2 class="homepage-posts-titles">{{post.title}}</h2>
  <p class="homepage-posts-images">{{post.image}}</p>
  <p class="homepage-posts-descriptions">{{post.description}}</p>

  <p class="homepage-posts-users">Created by {{post.user.username}}</p>
</div>
{{/each}}

