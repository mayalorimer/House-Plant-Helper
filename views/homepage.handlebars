<!-- Loop over each object in the projects array -->
{{#if logged_in}}
<div class="home-card">
    <h3 class="card-header">Create New Post</h3>
    <form class="card-body new-post-form" id="new-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input type="text" id="titleInp" name="post-title" class="form-input" />
        <label class="form-label" for="content">Description</label>
        <input name="content" class="form-input" id="descInp" />
        <button type="submit" class="btn" id="postBtn">Create</button>
    </form>
    <button id="upload_widget" class="cloudinary-button">UPLOAD PHOTO</button>
</div>

{{else}}
<div class="row">
  <div class="login-form-container">
    <h2>LOGIN</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">EMAIL:</label>
        <br/>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">PASSWORD:</label>
        <br/>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="buttons">
        <div class="form-group">
          <button class="btn-login" type="submit">LOGIN</button>
        </div>
        <div class="form-group">
          <button class="btn-signup" type="submit"><a href="/signUp">SIGN UP</a></button>
        </div>
      </div>
    </form>
  </div>
</div>

<h3 class="recents">RECENT POSTS</h3>
{{/if}}

<script src="./js/login.js"></script>

{{#each posts as |post|}}
<div class="recent-posts">
  <div class="homepage-posts">
    <h2 class="homepage-posts-titles">{{post.title}}</h2>
    <p class="homepage-posts-images">{{post.image}}</p>
    <p class="homepage-posts-descriptions">{{post.description}}</p>

    <p class="homepage-posts-users">Created by {{post.user.username}}</p>
  </div>
</div>
{{/each}}

<script src="./js/post.js"></script>
<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="/js/widget.js"></script>
